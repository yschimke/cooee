<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <servlet>
    <display-name>KtorServlet</display-name>
    <servlet-name>KtorServlet</servlet-name>
    <servlet-class>io.ktor.server.servlet.ServletApplicationEngine</servlet-class>

    <init-param>
      <param-name>io.ktor.config</param-name>
      <param-value>application.conf</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>

    <async-supported>true</async-supported>

    <multipart-config>
      <max-file-size>304857600</max-file-size>
      <max-request-size>304857600</max-request-size>
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>


  <servlet>
    <servlet-name>ff4j-console</servlet-name>
    <servlet-class>org.ff4j.web.FF4jDispatcherServlet</servlet-class>
    <init-param>
      <param-name>ff4jProvider</param-name>
      <param-value>com.baulsupp.cooee.features.CooeeFF4jProvider</param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>KtorServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ff4j-console</servlet-name>
    <url-pattern>/features/*</url-pattern>
  </servlet-mapping>

